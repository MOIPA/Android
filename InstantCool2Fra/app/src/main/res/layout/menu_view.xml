<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@mipmap/side_menu_bk"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_user_icon_menu_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="user account"
        android:id="@+id/tv_user_account_menu_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="user name"
        android:id="@+id/tv_user_name_menu_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_chname_menu_view"
        android:text="修改名字"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_chicon_menu_view"
        android:text="修改头像"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_chpwd_menu_view"
        android:text="修改密码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_logout_menu_view"
        android:text="退出登录"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>