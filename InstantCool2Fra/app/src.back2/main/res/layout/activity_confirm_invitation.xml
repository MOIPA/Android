<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tr.instantcool2.Activity.ConfirmInvitationActivity">
    <com.example.tr.instantcool2.IndicatorView.TopBarIndicatorView
        android:id="@+id/top_bar_activity_confirm"
        android:layout_height="56dp"
        android:layout_width="match_parent"/>

    <ImageView
        android:layout_below="@id/top_bar_activity_confirm"
        android:background="@mipmap/friend_info_top_bk"
        android:id="@+id/iv_activity_confirm_top_bk"
        android:layout_width="match_parent"
        android:layout_height="180dp" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_below="@id/iv_activity_confirm_top_bk"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-30dp"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:src="@mipmap/ic_launcher_round"
        android:id="@+id/iv_friend_image_confirm_activity"
        app:civ_border_width="2dp"
        app:civ_border_color="#FFF"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_below="@id/iv_friend_image_confirm_activity"
        android:layout_margin="20dp"
        android:orientation="horizontal"
        android:id="@+id/ll_friendconfirm_a"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:background="@mipmap/barrage"
                android:scaleType="centerInside"
                android:layout_width="50dp"
                android:layout_height="50dp" />
        </LinearLayout>

        <!--<ImageView-->
            <!--android:id="@+id/iv_friend_image_confirm_activity"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content" />-->


        <TextView
            android:text="好友姓名："
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_friend_confirm_name"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View  android:layout_height="1px"
        android:id="@+id/fenge"
        android:layout_below="@id/ll_friendconfirm_a"
        android:layout_width="match_parent"
        android:background="#66CCFF"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/ll_friendconfirm_b"
        android:layout_margin="20dp"
        android:orientation="horizontal"
        android:layout_below="@id/fenge"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:background="@mipmap/barrage"
                android:scaleType="centerInside"
                android:layout_width="50dp"
                android:layout_height="50dp" />
        </LinearLayout>
        <TextView
            android:text="好友账号："
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_friend_confirm_account"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/ll_friendconfirm_b"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:background="@drawable/shape"
            android:textColor="#FFF"
            android:text="拒绝"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/btn_friend_confirm_refuse"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <Button
            android:background="@drawable/shape"
            android:textColor="#FFF"
            android:text="同意"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:id="@+id/btn_friend_confirm_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>


</RelativeLayout>
