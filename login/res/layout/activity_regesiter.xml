<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

     <TextView
        android:id="@+id/r_welcome"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="欢迎注册" />
    	
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户"
        android:id="@+id/r_user"
        android:layout_below="@id/r_welcome"
        android:layout_marginTop="30dp"
        />
    <EditText 
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/r_user"
        android:layout_width="match_parent"	
        android:layout_height="wrap_content"
        android:id="@+id/r_username"
        android:hint="请输入用户名"
        />
    <TextView 
        android:layout_marginTop="20dp"
		android:text="密码"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:id="@+id/r_pwd"
		android:layout_below="@id/r_user"		
        />

    <EditText
        android:layout_marginTop="10dp" 
        android:layout_below="@id/r_username"
        android:layout_toRightOf="@id/r_pwd"
        android:layout_width="match_parent"	
        android:layout_height="wrap_content"
        android:id="@+id/r_userpassword"
        android:password="true"
        android:hint="请输入密码"
        />
    
    
    <Button 
        android:id="@+id/r_login"
        android:layout_below="@id/r_userpassword"
        android:layout_marginTop="5dp"
        android:text="注册"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:onClick="register"
        />
    

</RelativeLayout>
